<UserControl x:Class="BookLibrary.WPF.Views.GenreManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookLibrary.WPF.Views"
             xmlns:viewModels="clr-namespace:ViewModels;assembly=ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:GenreManagerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Genre Management" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15" 
                   HorizontalAlignment="Center"/>
        
        <!-- Genres List -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Genres}"
                  SelectedItem="{Binding SelectedGenre}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Genre ID" Binding="{Binding GenreId}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Genre Details Panel -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Genre Name -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="Name:" 
                       FontWeight="SemiBold" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding SelectedGenre.Name, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,5"/>
            
            <!-- Genre Description -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="Description:" 
                       FontWeight="SemiBold" 
                       VerticalAlignment="Top"
                       Margin="0,8,10,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding SelectedGenre.Description, UpdateSourceTrigger=PropertyChanged}" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     Height="80" 
                     Margin="0,5"/>
            
            <!-- Control Buttons -->
            <StackPanel Grid.Row="2" Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,10,0,0">
                <Button Content="Save" 
                        Command="{Binding SaveGenreCommand}" 
                        Width="80" 
                        Margin="0,0,10,0"/>
                <Button Content="Delete" 
                        Command="{Binding DeleteGenreCommand}" 
                        Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
